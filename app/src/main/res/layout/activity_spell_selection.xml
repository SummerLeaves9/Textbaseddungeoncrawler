<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4f4f4f"
    tools:context=".SpellSelection">

    <TextView
        android:id="@+id/spellSelectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Your Spells:"
        android:textColor="#37C53C"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/messageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#72D55C"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/activateSpellOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 1"
                android:textColor="#eaeaea"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/spellOneDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activateSpellTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 2"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spellTwoDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activateSpellThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 3"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spellThreeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activateSpellFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 4"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spellFourDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activateSpellFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 5"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spellFiveDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activateSpellSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 6"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spellSixDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activateSpellSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="Spell 7"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spellSevenDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(No spell equipped)"
                android:textColor="#eaeaea"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_button"
                android:text="@android:string/cancel"
                android:textColor="#eaeaea"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="162dp"/>
</LinearLayout>