<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f4f4f"
    tools:context=".StatSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/StatSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select stats. Points remaining:"
            android:textAlignment="center"
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/StatIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#eaeaea"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum = "4">

            <Button
                android:id="@+id/EnterZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="1"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="3"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/EnterFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="4"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="5"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="6"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="7"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/EnterEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="8"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="9"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/EnterTen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/color_button"
                android:textColor="#eaeaea"
                android:text="10"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/statStrengthIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Strength: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statAccuracyIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Accuracy: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statDefenseIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Defense: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statAgilityIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Agility: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statIntelligenceIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Intelligence: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statMagicIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Magic: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statLuckIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Luck: "
            android:textColor="#eaeaea"
            android:textSize="20sp" />

        <Button
            android:id="@+id/statBackButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_button"
            android:textColor="#eaeaea"
            android:text="back" />

    </LinearLayout>
</ScrollView>